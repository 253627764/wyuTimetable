<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        
        android:id="@+id/appwidget_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abs__dialog_full_holo_dark"
        android:orientation="horizontal"
        android:padding="8dp"
         >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/appwidget_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="1"
                android:textColor="#f0f0f0"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appwidget_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#f0f0f0"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/appwidget_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="复变函数\n何卫民\n第2-19周\n主楼239"
            android:textColor="#f0f0f0"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/appwidget_up_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/appwidget_btn_selector"
                android:src="@drawable/ic_navigation_collapse" />

            <ImageButton
                android:id="@+id/appwidget_down_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/appwidget_btn_selector"
                android:src="@drawable/ic_navigation_expand" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>